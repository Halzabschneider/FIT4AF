<h1>Events</h1>
<br>
<b><%= pluralize(@events.size, "Event ist", "Events sind") %>  vorhanden </b>
<br>
<br>
<table border="2">
	<tr>

		<th>Name</th>
		<th>Beschreibung</th>
		<th>Datum</th>
		<th>Location</th>
		<th>Preis</th>
		<th>Anzeigen</th>
		<th>Bearbeiten</th>
		<th>Löschen</th>


	</tr>
<% @events.each do |event| %> 
		<tr>
			<td>	<%= event.name %> </td>
			<td>	<%= event.description %> </td>
			<td>	<%= event.start_at %> </td>
			<td>	<%= event.location %> </td>
			<td>	<%= format_price(event) %> </td>
			<td>	<%= link_to "Anzeigen", event_path(event.id) %> </td>
			<td>	<%= link_to "Ändern", edit_event_path(event.id) %> </td>
			<td> 	<%= link_to "Löschen", event_path(event.id), method: :delete, data: {confirm: "Wirklich löschen"} %> </td>
		</tr>
		<% end %>
</table>

<%= link_to "Neuen Event anlegen", new_event_path %>